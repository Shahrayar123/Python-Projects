{
	"name": "Anaconda (Python 3)",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-aspire:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"076923.python-image-preview",
				"did1335.opencv-intellisense",
				"vscode-extensions-farshid.vscode-extensions-farshid",
				"ms-azuretools.vscode-docker",
				"ms-vscode.azure-repos"
			]
		}
	}

